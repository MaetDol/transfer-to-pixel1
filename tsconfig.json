{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["@jest/globals"]
  },
  "include": ["src/**/*", "test/**/*"]
}
